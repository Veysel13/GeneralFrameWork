@helper DegreeComponent(int degree)
{
    int k = degree % 2;
    int c = 10 - degree - 1;
    for (int i = 1; i < degree; i += 2)
    {
        <i class="fa fa-circle"></i>
    }
    if (k == 1)
    {
        <i class="fa fa-dot-circle"></i>
    }
    for (int i = 0; i < c; i += 2)
    {
        <i class="fa fa-circle" style="opacity: 0;"></i>
    }
}