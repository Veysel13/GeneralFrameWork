@helper SelectInputComponent(string name, string label, List<KeyValuePair<string, string>> secenekeler = null, string value = "", string placeHolder = "")
{
    <div class="form-group">
        <label for="@name">@label</label>
        <select class="form-control select2" id="@name" name="@name" placeholder="@placeHolder">
            @if (secenekeler != null)
            {
                foreach (var item in secenekeler)
                {
                    <option value="@item.Key" @(item.Key == value && value != "" ? "selected=\"selected\"" : "")>@item.Value</option>
                }
            }
        </select>
    </div>
}


@helper SelectInputSingleComponent(string name, string label, List<KeyValuePair<int, string>> secenekeler, int id = 0, string value = "", string placeHolder = "")
{
    <div class="form-group">
        <label for="@name">@label</label>
        <select class="form-control select2" id="@name" name="@name" placeholder="@placeHolder">
            @if (secenekeler != null)
            {
                <option value="0">Oda Tipi Şeçiniz</option>
                foreach (var item in secenekeler)
                {
                    <option value="@item.Key" @(item.Key == id && id != 0 ? "selected=\"selected\"" : "")>@item.Value</option>
                }
            }
        </select>
    </div>
}

