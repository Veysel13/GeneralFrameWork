@model ProductListViewModel

@using (Html.BeginCard("Product List"))
{
    @HtmlComponents.NewAddButtonComponent(Url.Action("Create","Product"))
    using (Html.BeginTable(new[] { "Ürün İsmi", "Ürün Fiyatı","Kategory İsmi","Şirket İsmi" ,"" }))
    {
        foreach (var item in Model.Products)
        {
            <tr>
                <th>@item.ProductName</th>
                <th>@item.UnitPrice</th>
                <th>@item.CategoryName</th>
                <th>@item.CompanyName</th>
                <th>
                    @HtmlComponents.DetailButtonComponent(Url.Action("Update", new { id = item.ProductId }))
                    @HtmlComponents.DeleteButtonComponent(Url.Action("Delete", new { id = item.ProductId }))
                </th>
            </tr>

        }
    }
}
