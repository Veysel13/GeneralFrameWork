@model CategoryListViewModel

@using (Html.BeginCard(Word("Category.Title").ToString()))
{
    @HtmlComponents.NewAddButtonComponent(Url.Action("Create", "Category"))
    using (Html.BeginTable(new[] { "Kategori Adı", "Açıklaması","Resim","" }))
    {
        foreach (var item in Model.Categories)
        {
            <tr>
                <th>@item.CategoryName</th>
                <th>@item.Description</th>
                <th><img src="@item.ThumbImage" /></th>
               
                <th>
                    @HtmlComponents.DetailButtonComponent(Url.Action("Update", new { id = item.CategoryId }))
                    @HtmlComponents.DeleteButtonComponent(Url.Action("Delete", new { id = item.CategoryId }))
                </th>
            </tr>

        }
    }
}
